{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ course.image }}</td>
            </tr>
            <tr>
                <th>Nb_enrollments</th>
                <td>{{ course.nbEnrollments }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ course.details }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ course.link }}</td>
            </tr>
            <tr>
                <th>Nb_likes</th>
                <td>{{ course.nbLikes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
