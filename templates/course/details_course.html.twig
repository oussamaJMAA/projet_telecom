                                </div>
                                  <div class="buy-checkbox-btn">
                                 <div class="item">
                                    <a href="{{ path('enroll_course', {'id': course.id} ) }}" class="buy-btn"target="_blank" onclick="window.open('{{course.link}}');" >Enroll Now</a>
                                </div> 
                                        </div>
                                 
                                 {% endif %}

                            </div>
</div>

                          
                        </div>
                    </div>

