{% extends 'base_front.html.twig' %}

{% block title %}Home
{% endblock %}
{% block body %}
<style>

.form-control:focus {
    box-shadow: none;
    border-color: #BA68C8
}

.profile-button {
    background: rgb(99, 39, 120);
    box-shadow: none;
    border: none
}

.profile-button:hover {
    background: #682773
}

.profile-button:focus {
    background: #682773;
    box-shadow: none
}

.profile-button:active {
    background: #682773;
    box-shadow: none
}

.back:hover {
    color: #682773;
    cursor: pointer
}

.labels {
    font-size: 11px
}

.add-experience:hover {
    background: #BA68C8;
    color: #fff;
    cursor: pointer;
    border: solid 1px #BA68C8
}

</style>
	<div class="page-title-area">
		<div class="container">
			<div class="page-title-content">
				<h2>
					Profile</h2>
				<ul>
					<li>
						<a href="index.html">Home</a>
					</li>
					<li>User Profile</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- End Page Title Area -->

	<!-- Start Contact Info Box Area -->

	<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
        {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
        {% if app.user.photo starts with 'https' %}
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="{{app.user.photo}}"><span class="font-weight-bold">{{app.user.fullName}}</span><span class="text-black-50">{{app.user.email}}</span><span> </span></div>
            {% else %}
             <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="/uploads/photos/{{app.user.photo}}"><span class="font-weight-bold">{{app.user.fullName}}</span><span class="text-black-50">{{app.user.email}}</span><span> </span></div>
            {% endif %}
        {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                	
                <div class="row mt-2">

                    <div class="col-md-6"><label class="labels">FullName</label>
                    {{ form_widget(form.fullName, {'attr': {'type':'text','class': 'form-control','placeholder':'full name'}}) }}
                    </div>
                    <div class="col-md-6"><label class="labels">Password</label>
{{ form_widget(form.password, {'attr': {'type':'password','class': 'form-control','placeholder':'password'}}) }}
                    
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Mobile Number</label>

                    {{ form_widget(form.phone, {'attr': {'type':'tel','class': 'form-control','placeholder':'phone number'}}) }}
                    </div>
                  
                 
                </div>
            
                <div class="mt-5 text-center"><button class="btn btn-primary" type="submit">Save Profile</button></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center experience"><span>Edit Experience</span></div><br>
                <div class="col-md-12"><label class="labels">Write your experience or level</label>
                
                {{ form_widget(form.experience, {'attr': {'type':'text','class': 'form-control','placeholder':'Enter experience'}}) }}
                </div> <br>
                <div class="col-md-12"><label class="labels">Additional Details</label>{{ form_widget(form.details, {'attr': {'type':'text','class': 'form-control','placeholder':'Enter your details'}}) }}</div>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

            </div>
        </div>
    </div>
</div>
{{form_end(form)}}
</div>
</div>

				


			</div>
		</div>
	
	<!-- End Contact Info Box Area -->


</div></section><!-- Start Contact Area --><!-- Start Map Area --><!-- End Map Area -->{% endblock %}
